{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // esbuild in SAM doesn't strictly need this if it builds directly
    "moduleResolution": "node" // Important for esbuild to find modules
  },
  "include": ["app.ts"],
  "exclude": ["node_modules", "dist"]
}